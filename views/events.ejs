<!DOCTYPE <!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Developer Wellness</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://code.jquery.com/jquery-3.1.1.js"></script>
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <%- include('./partials/nav') %>

  <br><br><br>
  <header>
    <h1>Events</h1>
  </header>
  <main>
    <section>
      <fieldset>
        <form action="/search" method="get"/><!--sending user input as /search query-->
          <label>
            <h3>Input City Location</h3>
          </label>
          <input type="text" id="city" name="location">
          <button type="submit"></button>
        </form>
      </fieldset>
    </section>

    <section>
      <% if (resultsArray.length > 0){ %>

        <% resultsArray.forEach(element => { %>
        <article>
          <fieldset>
            <form action="/favorite/<%= element.name %>?_method=PUT" method="POST">
            <img src="<%= element.logo_url %>" alt="<%= element.name %>">
            <input type="hidden" name="name" value="<%= element.name %>">
            <input type="hidden" name="next_date" value="<%= element.next_date %>">
            <input type="hidden" name="location" value="<%= element.location %>">
            <input type="hidden" name="external_race_url" value="<%= element.external_race_url %>">
            <input type="hidden" name="logo_url" value="<%= element.logo_url %>">
            <input type="hidden" name="description" value="<%= element.description %>">
            <label> 
              <h6 value="<%= element.name %>"><%= element.name %></h6>
            </label>
            <!-- <input type="hidden" name="description" value="<%= element.description %>"> -->
            <input type="hidden" name="completed " value="<%= element.completed %>">
            <label>
              <p><%- element.description %></p>
            </label>
                      <label>
                        <h6><% element.next_date %></h6>
                      </label>
            <button type="submit">Add to favorites</button>
            <!-- <a href="/favorite/<%= element.name %>?_method:PUT method='POST'">Add to favorites</a> -->
            <!-- <a action="/favorite:<%= element.uniqId %>">Add to favorites</a> -->
            </form>
          </fieldset>
          </article> 
  
          <% }); %>
  
        </section>
      <% }; %>
      
  </main>

  <footer>
    <section id="footerSue">
      <div id="aboutSue">
        <h3>Sue Tarazi, PT, DPT, OCS, MTC</h3>
        <p>Sue Tarazi is a Physical Therapist who is also an Orthopedics and Manual Specialist in Seattle, WA<br>
          She ha s owned her own private practice for over 9 years and has served as faculty at an Acupuncture
          school.<br>
          Recently, Sue made a career transition to Software Development and is thrilled to meld her new knowledge with
          her past experience.</p>
      </div>
      <div class="circular--landscape" id="suePic">
        <img src="images/DSC09160.jpg" />
      </div>
    </section>
    </div>
  </footer>
</body>
<script src="app.js" async defer></script>

</html>